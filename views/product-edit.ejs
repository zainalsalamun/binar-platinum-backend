<form action="/product-register/edit=<%= products.id %>" method="post">
  <div class="form-group">
    <label for="nama_produk">Product Name</label>
    <input type="text" id="nama_produk" name="nama_produk" value="<%= products.nama_produk %>" placeholder="Product Name" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="harga">Price</label>
    <input type="number" id="harga" name="harga" value="<%= products.harga %>" placeholder="Price" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="deskripsi">Description</label>
    <textarea id="deskripsi" name="deskripsi" rows="8" placeholder="Description" class="form-control" required><%= products.deskripsi %></textarea>
  </div>
  <div class="form-group">
    <label for="nama_file">Picture</label>
    <!-- <input type="file" id="nama_file" name="nama_file" placeholder="Picture" class="form-control" required> -->
    
    <input type="text" id="nama_file" name="nama_file" value="<%= products.nama_file %>" placeholder="Picture" class="form-control" required>
    <small class="form-text text-muted">Jika tidak ingin mengganti picture, biarkan kosong.</small>
  </div>
  <button type="submit" class="btn btn-primary">Simpan</button>
</form>

